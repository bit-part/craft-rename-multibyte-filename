{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("bitpart\\renamemultibytefilename\\assetbundles\\renamemultibytefilename\\RenameMultibyteFilenameAsset") %}

{% set pluginHandle = 'rename-multibyte-filename' %}

<h2>{{ 'Format'|t(pluginHandle) }}</h2>

{{ forms.select({
    id: 'filenameFormat',
    name: 'filenameFormat',
    options: [
        { label: 'Time (Formatted: YmdHis)'|t(pluginHandle), value: 'time' },
        { label: 'A hash value'|t(pluginHandle), value: 'hash' },
        { label: 'Asset ID'|t(pluginHandle), value: 'id' }
    ],
    value: settings['filenameFormat']
}) }}

<h2>{{ 'Volume Handle Name'|t(pluginHandle) }}</h2>

{{ forms.select({
    id: 'addVolumeHandle',
    name: 'addVolumeHandle',
    options: [
        { label: 'Do not add'|t(pluginHandle), value: '' },
        { label: 'Insert before a filename'|t(pluginHandle), value: 'before' },
        { label: 'Add after a filename'|t(pluginHandle), value: 'after' }
    ],
    value: settings['addVolumeHandle']
}) }}

<h2>{{ 'Random String'|t(pluginHandle) }}</h2>

{{ forms.select({
    id: 'addRandomString',
    name: 'addRandomString',
    options: [
        { label: 'Do not add'|t(pluginHandle), value: '' },
        { label: 'Insert before a filename'|t(pluginHandle), value: 'before' },
        { label: 'Add after a filename'|t(pluginHandle), value: 'after' }
    ],
    value: settings['addRandomString']
}) }}

<hr>

<h2>{{ 'Delimiter'|t(pluginHandle) }}</h2>

<p>{{ 'Join words above with'|t(pluginHandle) }}</p>
{{ forms.select({
    id: 'delimiter',
    name: 'delimiter',
    options: [
        { label: 'Hyphen'|t(pluginHandle), value: '-' },
        { label: 'Underscore'|t(pluginHandle), value: '_' },
        { label: 'Dot'|t(pluginHandle), value: '.' },
        { label: 'No delimiter'|t(pluginHandle), value: '' }
    ],
    value: settings['delimiter']
}) }}
